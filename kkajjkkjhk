let keyAtual = "";

function verificarKey(){
  keyAtual = keyInput.value.trim().toUpperCase();

  if(!KEYS.includes(keyAtual)){
    resultado.innerText = "‚ùå Key inv√°lida";
    return;
  }

  if(localStorage.getItem("KEY_"+keyAtual)){
    resultado.innerText = "‚ùå Key j√° usada";
    return;
  }

  resultado.innerText = "‚úÖ Key v√°lida";
  abrir.style.display = "inline-block";
}

function abrirCaixa(){
  const premio = premios[Math.floor(Math.random()*premios.length)];
  resultado.innerText = "üéâ Voc√™ ganhou " + premio;
  localStorage.setItem("KEY_"+keyAtual,"USADA");
  abrir.style.display = "none";
}
